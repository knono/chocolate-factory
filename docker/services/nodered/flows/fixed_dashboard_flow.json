    {
        "id": "process_dashboard_data",
        "type": "function",
        "z": "fixed_dashboard_tab",
        "name": "üîÑ Procesar Datos",
        "func": "const data = msg.payload;\n\n// Precio energ√≠a - para chart y gauge\nconst priceMsg = {\n    payload: data.current?.energy_price || 0,\n    topic: \"energy_price\"\n};\nnode.send([priceMsg, null, null, null]);\n\n// Temperatura\nconst tempMsg = {\n    payload: data.current?.temperature || 0,\n    topic: \"temperature\"\n};\nnode.send([null, tempMsg, null, null]);\n\n// Humedad \nconst humMsg = {\n    payload: data.current?.humidity || 0,\n    topic: \"humidity\"\n};\nnode.send([null, null, humMsg, null]);\n\n// ML Score\nconst mlMsg = {\n    payload: data.predictions?.energy_score || 0,\n    topic: \"ml_score\"\n};\nnode.send([null, null, null, mlMsg]);\n\nreturn null;",
        "outputs": 4,
        "noerr": 0,
        "x": 540,
        "y": 80,
        "wires": [
            ["price_chart", "price_gauge"],
            ["temp_gauge"],
            ["humidity_gauge"],
            ["ml_gauge"]
        ]
    },
